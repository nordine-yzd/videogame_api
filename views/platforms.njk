{% extends "layout.njk" %}


{% block content%}

<ul>
{% for element in platt %}

  <div align="left">
	    <h3>{{ element.name }}</h3>
  </div>

  <div align="center">
{% if element.logo.url %}
  <img src="{{element.logo.url}}" onclick=window.location.href=`http://localhost:3000/platforms/{{element.id}}` title="{{ element.name }}" alt="{{element.name}}">
{% else %}
  {# <h1>Il n'y a pas de photos</h1> #}
  <img src="/images/logo.png" onclick=window.location.href=`http://localhost:3000/platforms/{{element.id}}` title="{{ element.name }}" alt="{{element.name}}">
{% endif %}
  </div>

{% endfor %}
</ul>

{% endblock %}

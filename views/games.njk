{% extends "layout.njk" %}

{% block content%}



<ul>
{% for element in games %}

  <div align="left">
	    <h3>{{ element.name }}</h3>
  </div>

  <div align="center">
{% if element.cover.url %}
  <img src="{{element.cover.url}}" onclick=window.location.href=`http://localhost:3000/games/{{element.id}}` title="{{ element.name }}" alt="{{element.name}}">
{% else %}
  {# <h1>Il n'y a pas de photos</h1> #}
  <img src="/images/logo.png" onclick=window.location.href=`http://localhost:3000/games/{{element.id}}` title="{{ element.name }}" alt="{{element.name}}">
{% endif %}
  </div>

{% endfor %}
</ul>

  {# <div class="container" ;> #}


{# </div> #}

{% if queryStr.page %}
  {% if indexPage >= 1 and indexPage <= 4058 %}
    {% if indexPage ===  1 %}
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a class="page-link" href="/games?page=2">Next</a>
          </li>
        </ul>
      </nav>
    {% endif %}
    {% if indexPage ===  4058 %}
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a class="page-link" href="/games?page={{ indexPage - 1 }}" tabindex="-1">Previous</a>
          </li>
        </ul>
      </nav>
    {% endif %}
    {% if indexPage >= 2 and indexPage <= 4057 %}
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a class="page-link" href="/games?page={{ indexPage - 1 }}" tabindex="-1">Previous</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="/games?page={{ indexPage + 1 }}" tabindex="-1">Next</a>
          </li>
        </ul>
      </nav>
    {% endif %}
  {% else %}
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="/games?page=4058" tabindex="-1">Previous</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="/games?page=1" tabindex="-1">Next</a>
        </li>
      </ul>
    </nav>
  {% endif %}
{% else %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <a class="page-link" href="/games?page=2">Next</a>
      </li>
    </ul>
  </nav>
{% endif %}

	    <P align="right">{{ indexPage }}/4057</P>

{% endblock %}
